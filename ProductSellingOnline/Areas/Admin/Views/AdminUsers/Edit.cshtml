@model AdminUsersRolesViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="title is-4">Edit User</h4>
<hr />

<div class="field">
    <form asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="help is-danger"></div>
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <div class="field">
            <label asp-for="ApplicationUser.FullName" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.FullName" class="input" />
                <span asp-validation-for="ApplicationUser.FullName" class="help is-danger"> </span>
            </div>
        </div>

        <div class="field">
            <label asp-for="ApplicationUser.FirstName" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.FirstName" class="input" />
                <span asp-validation-for="ApplicationUser.FirstName" class="help is-danger"> </span>
            </div>
        </div>

        <div class="field">
            <label asp-for="ApplicationUser.MiddleName" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.MiddleName" class="input" />
                <span asp-validation-for="ApplicationUser.MiddleName" class="help is-danger"> </span>
            </div>
        </div>

        <div class="field">
            <label asp-for="ApplicationUser.LastName" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.LastName" class="input" />
                <span asp-validation-for="ApplicationUser.LastName" class="help is-danger"> </span>
            </div>
        </div>

        <div class="field">
            <label asp-for="ApplicationUser.Email" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.Email" class="input" readonly />
            </div>
        </div>

        <div class="field">
            <label asp-for="ApplicationUser.CompleteAddress" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.CompleteAddress" class="input" />
                <span asp-validation-for="ApplicationUser.CompleteAddress" class="help is-danger"> </span>
            </div>
        </div>

        <div class="field">
            <label asp-for="ApplicationUser.PhoneNumber" class="label"></label>
            <div class="control">
                <input asp-for="ApplicationUser.PhoneNumber" class="input" />
                <span asp-validation-for="ApplicationUser.PhoneNumber" class="help is-danger"> </span>
            </div>
        </div>

        @*<div class="field">
            <label asp-for="RoleName" class="label"></label>
            <div class="control">
                <input asp-for="RoleName" class="input" />
                <span asp-validation-for="RoleName" class="help is-danger"> </span>
            </div>
        </div>*@

        <div class="field">
            <label asp-for="RoleName" class="label"></label>
            <div class="select">
                <select asp-for="RoleName" asp-items="new SelectList(Model.Roles)"></select>
            </div>
        </div>

        <div class="field is-grouped are-medium">
            <div class="control">
                <input type="submit" value="Save" class="button is-primary" />
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Back to List</a>
            </div>
        </div>
    </form>
</div>

