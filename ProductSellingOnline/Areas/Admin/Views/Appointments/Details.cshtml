@model AppointmentDetialsViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="title is-4">Appointment Details</h2>

<div class="field is-horizontal">
    <div class="column is-half">
        <div class="field is-horizontal">
            @*<input asp-for="@Model.Appointment.Id" hidden />*@
            <div class="column is-one-quarter">
                <label class="label">Customer Name: </label>
            </div>
            <div class="column is-two-fifths">
                <input type="text" asp-for="@Model.Appointment.CustomerName" class="input" disabled>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-one-quarter">
                <label class="label">Phone Number: </label>
            </div>
            <div class="column is-two-fifths">
                <input type="tel" asp-for="@Model.Appointment.CustomerPhoneNumber" class="input" disabled>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-one-quarter">
                <label class="label">Email: </label>
            </div>
            <div class="column is-two-fifths">
                <input type="email" asp-for="@Model.Appointment.CustomerEmail" class="input" disabled>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-one-quarter">
                <label class="label">Total Amount: </label>
            </div>
            <div class="column is-two-fifths">
                <input type="email" asp-for="@Model.Appointment.TotalAmount" class="input" disabled>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-one-quarter">
                <label class="label">Appointment Date: </label>
            </div>
            <div class="column is-two-fifths">
                <input type="date" asp-for="@Model.Appointment.AppointmentDate" class="input" disabled>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-one-quarter">
                <label class="label">Appointment Time: </label>
            </div>
            <div class="column is-two-fifths">
                <input type="time" asp-for="@Model.Appointment.AppointmentDate" class="input" disabled>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-one-quarter">
                <label class="label" asp-for="@Model.Appointment.SalesPersonId"></label>
            </div>
            <div class="column is-three-fifths">
                <div class="select">
                    <select asp-for="@Model.Appointment.SalesPersonId" asp-items="@Model.SalesPerson.ToSelectListItemsString(Model.Appointment.SalesPersonId)" disabled></select>
                </div>
            </div>
        </div>

        <div class="field is-horizontal">
            <div class="column is-three-fifths">
                <label class="checkbox" asp-for="Appointment.IsConfirmed">
                    <input type="checkbox" asp-for="Appointment.IsConfirmed" disabled>
                    Confirmed ?
                </label>
            </div>
        </div>
    </div>
    <div class="column is-three-fifths">
        <table class="table">
            <tr>
                <th style="text-align:center; width:20%"></th>
                <th style="text-align:center;">
                    <label asp-for="@Model.Products.FirstOrDefault().Name"></label>
                </th>
                <th style="text-align:center;">
                    <label asp-for="@Model.Products.FirstOrDefault().Price"></label>
                </th>
                <th style="text-align:center;">
                    <label asp-for="@Model.Products.FirstOrDefault().ShadeColor"></label>
                </th>
                <th style="text-align:center;">
                    <label asp-for="@Model.Products.FirstOrDefault().ProductType.Name">Product Type</label>
                </th>
                <th style="text-align:center;"></th>
            </tr>
            @foreach (var item in Model.Products)
            {
                <tr style="padding: 50px;">
                    <td>
                        <a asp-controller="Home" asp-area="Customer" asp-action="Details" asp-route-id="@item.Id">
                            <img src="@item.Image" width="100%" style="margin: auto; display:block; border-radius:5px" />
                        </a>
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(c => item.Name)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(c => item.Price)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(c => item.ShadeColor)
                    </td>
                    <td style="text-align:center">
                        @Html.DisplayFor(c => item.ProductType.Name)
                    </td>
                    <td>
                        
                    </td>
                </tr>

            }
        </table>
    </div>
</div>
<div class="column is-one-quarter">
    <a class="button is-success" asp-area="Admin" asp-controller="Appointments" asp-action="Index">Back To List</a>
</div>