@model ProductSellingOnline.Models.ProductType

@{
    ViewData["Title"] = "Create";
}

<h2 class="title is-4" >Create Product Type</h2>
<br />

<div class="field">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="help is-danger"></div>       
        <div class="field is-horizontal">
			<div class="control column is-1">
				<label asp-for="Name" class="label"></label>
			</div>
				<div class="control column is-5">
					<input asp-for="Name" class="input" placeholder="Product Type" />
					<span asp-validation-for="Name" class="help is-danger"> </span>
				</div>
		</div>
        <div class="field is-grouped">
            <div class="control">
                <input type="submit" value="Create" class="button is-primary" />
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Back to List</a>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
