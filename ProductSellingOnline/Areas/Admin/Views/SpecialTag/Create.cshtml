@model SpecialTag
@{
    ViewData["Title"] = "Create";
}

<div class="field">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="help is-danger"></div>
        <label class="label" asp-for="Name">Tag Name</label>
        <div class="control has-icons-left has-icons-right">
            <input class="input is-success" type="text" placeholder="Enter Tag name..." asp-for="Name">
            <span asp-validation-for="Name" class="help is-danger"> </span>
            <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
            </span>
            <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
            </span>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <input type="submit" value="Create" class="button is-primary" />
            </div>
            <div class="control">
                <a asp-action="Index" class="button is-light">Back to List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
