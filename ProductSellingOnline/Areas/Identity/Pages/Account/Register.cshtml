@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="field is-horizontal">
    <div class="columns">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="column is-three-fifths">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="input" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="input" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="input" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="input" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.MiddleName"></label>
                <input asp-for="Input.MiddleName" class="input" />
                <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.CompleteAddress"></label>
                <input asp-for="Input.CompleteAddress" class="input" />
                <span asp-validation-for="Input.CompleteAddress" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="input" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class=""column is-three-fifths">
                <label asp-for="Input.IsSuperAdmin"></label>
                <input asp-for="Input.IsSuperAdmin" class="checkbox" type="checkbox" />
                <span asp-validation-for="Input.IsSuperAdmin" class="text-danger"></span>
            </div>

            <button type="submit" class="button is-light">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
