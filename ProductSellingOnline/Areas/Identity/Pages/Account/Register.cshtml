@page
@model RegisterModel

@{
	ViewData["Title"] = "Register";
}

@*<h2>@ViewData["Title"]</h2>*@

<div class="field is-grouped-centered">
	<form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="is-center">
		<h4 class="title is-4">Create a new account.</h4>
		<hr />
		<div asp-validation-summary="All" class="help is-danger"></div>
		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.Email" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.Email" class="input" type="email" />
				<span asp-validation-for="Input.Email" class="help is-danger"></span>
			</div>
		</div>
		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.Password" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.Password" class="input" type="password" />
				<span asp-validation-for="Input.Password" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.ConfirmPassword" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.ConfirmPassword" class="input" type="password" />
				<span asp-validation-for="Input.ConfirmPassword" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.FullName" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.FullName" class="input" type="text" />
				<span asp-validation-for="Input.FullName" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.FirstName" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.FirstName" class="input" type="text" />
				<span asp-validation-for="Input.FirstName" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.LastName" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.LastName" class="input" type="text" />
				<span asp-validation-for="Input.LastName" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.MiddleName" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.MiddleName" class="input" type="text" />
				<span asp-validation-for="Input.MiddleName" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.CompleteAddress" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.CompleteAddress" class="input" type="text" />
				<span asp-validation-for="Input.CompleteAddress" class="help is-danger"></span>
			</div>
		</div>

		<div class="field is-horizontal">
			<div class="control column is-2">
				<label asp-for="Input.PhoneNumber" class="label"></label>
			</div>
			<div class="control column is-5">
				<input asp-for="Input.PhoneNumber" class="input" type="text" />
				<span asp-validation-for="Input.PhoneNumber" class="help is-danger"></span>
			</div>
		</div>
		<hr />
		@*<div class="" column is-three-fifths">
				<label asp-for="Input.IsSuperAdmin"></label>
				<input asp-for="Input.IsSuperAdmin" class="checkbox" type="checkbox" />
				<span asp-validation-for="Input.IsSuperAdmin" class="text-danger"></span>
			</div>*@

		<button type="submit" class="button is-light">Register</button>
	</form>
</div>





@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
